<div class="message-container">  
  <div class="user-image-small">
    <%= link_to user_path(message.user) do %>
      <%= image_tag message.user_photo, alt: message.user.decorate.name.truncate(27) %>
    <% end %>
  </div>  

  <div class="message-body-container">
    <div class="message-user-info">  
      <div class="user-info">
        <div class="display-name">
          <%= link_to message.user.decorate.name, user_path(message.user) %>
        </div>
      </div>
    </div>

    <div class="card" style="margin-bottom: 0px;">
      <div class="card-section">    
        <div class="message-body">
          <p>      
            <%= message.body %>
          </p>
        </div>        
      </div>
    </div>    
  </div>
</div><!-- message-container -->
<p class="float-right"><small><%= message.timestamp %></small></p>
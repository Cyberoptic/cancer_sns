<%= link_to chat_room_path(chat_room) do %>  
  <li class="message-list-item <%= is_active ? 'is-active' : '' %>">
    <div class="user-image-small">
      <%= image_tag friend.photo %>
    </div>
    <div class="user-info"> 
      <div class="display-name">
        <%= friend.decorate.display_name %>
      </div>
    </div>  
  </li>
<% end %>
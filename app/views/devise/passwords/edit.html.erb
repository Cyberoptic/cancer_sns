<div class="row">
  <div class="columns medium-4 medium-offset-4 small-12">
    <h3>パスワードの再設定</h3>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>

      <div class="form-inputs">
        <%= f.input :password, label: "新しいパスワード", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        <%= f.input :password_confirmation, label: "新しいパスワード（確認用）", required: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "パスワードを再設定する", class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>
    
    <br>
    <%= render "devise/shared/links" %>
  </div>
</div>


<div class="row">
  <div class="columns medium-4 medium-offset-4 small-12">
    <div class="callout">
      <h3 class="text-center">無料会員登録</h3>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, required: true, placeholder: "メールアドレス" %>
          <%= f.input :password, required: true, placeholder: 'パスワード', hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <%= f.input :password_confirmation, required: true, placeholder: 'パスワード（再確認）' %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "登録する", class: 'button expanded' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div><!-- callout -->
  </div><!-- columns -->
</div><!-- row -->
<% if User.liked?(apost, current_user) %>
  <%= link_to "Unlike", post_like_path(apost, 5), method: :delete, remote: true %>
<% else %>
  <%= link_to "Like", post_likes_path(apost), method: :post, remote: true %>
<% end %>

<span class="post-like">
  <%= pluralize apost.likes.size, "like" %>
</span>
<% if current_user.plussed_happy?(apost) %>
  <%= link_to "UnHappy", post_happy_path(apost,111), method: :delete, remote: true %>
<% else %>
  <%= link_to "Happy", post_happies_path(apost), method: :post, remote: true %>
<% end %>

<span class="post-like">
  <%= pluralize apost.happies.size, "happy" %>
</span>
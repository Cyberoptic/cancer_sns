<div class="comment">
	<div class="user-image">
		<%= image_tag comment.user_photo %>
	</div>
	
	<div class="comment-content">
		<span class="nickname">
			<%= link_to comment.user.display_name, user_path(comment.post_user) %>
		</span>
		<span class="comment-text">
			<%= comment.text %>
		</span>

		<span class="timestamp">
			<%= time_ago_in_words(comment.created_at) %>前
		</span>
	</div>
</div>
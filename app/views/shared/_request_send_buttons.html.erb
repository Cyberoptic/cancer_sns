<% if user != current_user %>
 <% if current_user.friends.exists?(user) %>
     <%= link_to 'Remove Friend',  user_unfriendings_path(user.id), method: 'post', remote: true %>
 <% elsif !current_user.pending_friends.exists?(user) %>
     <%= link_to 'Send Request', user_requests_path(user.id), method: 'post', remote: true %>
 <% elsif current_user.pending_friends.exists?(user) %>
      <text> Request Sent </text>
 <% end %>
<% end %>
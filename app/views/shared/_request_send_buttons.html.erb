<% if user != current_user %>
 <% if current_user.friends.exists?(user) %>
    <%= link_to '友達から外す',  user_unfriendings_path(user.id), method: 'post', remote: true, class: 'button alert expanded small' %>
 <% elsif !current_user.requested_friends.exists?(user) && !current_user.pending_friends.exists?(user) %>
    <%= link_to '友達申請する', user_requests_path(user.id), method: 'post', remote: true, class: 'button warning expanded small' %>
 <% elsif current_user.requested_friends.exists?(user) || current_user.pending_friends.exists?(user) %>
 		<%= link_to '申請済み',  user_unfriendings_path(user.id), method: 'post', remote: true, class: 'button expanded small' %>    
 <% end %>
<% end %>